<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>statistics</title>

    <%- include('partials/bg_anim') %> <%- include('partials/scrollbar') %>
    <style>
      @font-face {
        font-family: "font";
        font-display: swap;
        src: url("/font.woff");
      }

      * {
        font-family: "font";
      }

      body {
        background-color: #171c20;
        background-image: url("/bg.png");
        display: flex;
        justify-content: center;
        margin: 0;
      }

      #title {
        color: #6bd425;
        font-size: 2rem;
        margin: 0.5rem 0 0.5rem 0;
      }

      #content {
        background-color: #2c363f;
        width: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 1rem 0 3rem 0;
        outline: #495969 3px solid;
      }

      #stats {
        width: 100%;
        display: flex;
        flex-direction: column;
        padding: 1rem;
        background-color: #192025;
        box-sizing: border-box;
        gap: 1rem;
        color: #e75a7c;
      }

      summary {
        font-size: 1.5rem;
      }

      @media (max-width: 768px) {
        #content {
          width: 90%;
        }

        #title {
          font-size: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <div id="content">
      <span id="title">statistics</span>
      <div id="stats">
        <h1>Global visits: <%= stats.global_visits %></h1>
        <details>
          <summary>Users</summary>
          <% stats.users.forEach(user => {%>
          <details style="margin-left: 2rem">
            <summary><%- user.name %></summary>
            <span style="margin-left: 2.5rem; margin-top: 1.25rem; font-size: 1.25rem">Visits: <%- user.visits %></span>
            <details style="margin-left: 2.5rem">
              <summary>Posts</summary>
              <% user.posts.forEach(post => {%>
              <span style="margin-left: 2.5rem; margin-top: 1.25rem; font-size: 1.25rem"><%- post.id %>: <%- post.visits %></span><br />
              <%}); %>
            </details>
          </details>
          <%}); %>
        </details>
      </div>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
